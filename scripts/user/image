#!/bin/bash
# Image command dispatcher
# Usage: image <subcommand> [args...]

set -e

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# Colors
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
CYAN='\033[0;36m'
BOLD='\033[1m'
NC='\033[0m'

show_usage() {
    echo -e "${BOLD}image${NC} - Docker image management commands"
    echo ""
    echo -e "${CYAN}Usage:${NC}"
    echo "  image <subcommand> [args...]"
    echo ""
    echo -e "${CYAN}Subcommands:${NC}"
    echo -e "  ${BOLD}create${NC}      Create a custom Docker image"
    echo -e "  ${BOLD}list${NC}        List available images"
    echo -e "  ${BOLD}update${NC}      Rebuild/update an existing image"
    echo -e "  ${BOLD}delete${NC}      Remove unused images"
    echo ""
    echo -e "${CYAN}Examples:${NC}"
    echo "  image create"
    echo "  image list"
    echo "  image update my-image"
    echo "  image delete old-image"
    echo ""
    echo -e "${CYAN}Tip:${NC} You can also use hyphenated form: image-create, image-list, etc."
    echo ""
}

# Get subcommand
SUBCOMMAND="${1:-}"

if [ -z "$SUBCOMMAND" ] || [ "$SUBCOMMAND" = "help" ] || [ "$SUBCOMMAND" = "-h" ] || [ "$SUBCOMMAND" = "--help" ]; then
    show_usage
    exit 0
fi

# Check if subcommand script exists
SUBCOMMAND_SCRIPT="$SCRIPT_DIR/image-$SUBCOMMAND"

if [ ! -f "$SUBCOMMAND_SCRIPT" ]; then
    echo -e "${RED}Error:${NC} Unknown subcommand: ${BOLD}$SUBCOMMAND${NC}"
    echo ""
    echo "Available subcommands: create, list, update, delete"
    echo "Run 'image help' for more information"
    exit 1
fi

# Execute subcommand, passing all remaining arguments
shift
exec "$SUBCOMMAND_SCRIPT" "$@"
