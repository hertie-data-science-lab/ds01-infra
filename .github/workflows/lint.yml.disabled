name: Lint

on:
  pull_request:
    branches: [main]
    paths:
      - '**.py'
      - 'pyproject.toml'

jobs:
  ruff:
    name: Ruff Lint & Format Check
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Setup Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.11'

      - name: Install ruff
        run: pip install ruff

      - name: Ruff format check
        run: ruff format --check .

      - name: Ruff lint
        run: ruff check .
